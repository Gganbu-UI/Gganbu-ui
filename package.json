{
  "name": "gganbu-ui",
  "private": true,
  "workspaces": [
    "packages/**",
    "apps/*"
  ],
  "packageManager": "yarn@1.22.21",
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.2",
    "@babel/preset-react": "^7.22.3",
    "@babel/preset-typescript": "^7.21.5",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.5",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "hygen": "^6.2.11",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "turbo": "^1.13.2",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "prepare": "husky && yarn workspace @gganbu-org/styled-system prepare",
    "multitask": "turbo run lint test build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev --parallel",
    "build": "turbo build",
    "clean": "yarn cache clean && turbo run clean && rm -rf node_modules",
    "create:graph": "turbo build --graph=dependency-graph.png",
    "create:package": "yarn hygen generator create-package with-prompt",
    "version": "changeset version",
    "release": "changeset publish",
    "enter:beta": "changeset pre enter beta",
    "exit:beta": "changeset pre exit beta",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --snapshot --no-git-tag --tag canary"
  }
}
